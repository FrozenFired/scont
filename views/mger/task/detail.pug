extends ../aalayout/layout

block content
	.container
		form(method="post", action="updateTask", enctype="multipart/form-data")
			.form-group.row
				label.col-sm-2.col-form-label TaskCode
				.col-sm-3
					input.form-control(type="text", value=object.code, readonly="readonly")
				label.col-sm-2.col-form-label User
				.col-sm-3
					if object.user
						input.form-control(type="text", value=object.user.code, readonly="readonly")
					else
						input.form-control(type="text", value="Staff is deleted", readonly="readonly")
			hr
			.form-group.row
				label.col-sm-2.col-form-label Title
				.col-sm-8
					input.form-control(type="text", value=object.title, readonly="readonly")
			.form-group.row
				label.col-sm-2.col-form-label Serial
				.col-sm-8
					input.form-control(type="text", value=object.order, readonly="readonly")

			.form-group.row
				input#iptDesc(type="hidden",  value=object.description, readonly="readonly")
				label.col-sm-2.col-form-label description
				.col-sm-8
					textarea#tarDesc.form-control.rounded-0(rows="3", readonly="readonly")
			.form-group.row
				input#iptNote(type="hidden",  value=object.note, readonly="readonly")
				label.col-sm-2.col-form-label note
				.col-sm-8
					textarea#tarNote.form-control.rounded-0(rows="3", readonly="readonly")