a.btn.btn-default(href="#", data-toggle="modal", data-target="#upVderInfo") updateInfo

#upVderInfo.modal.fade
	.modal-dialog
		.modal-content
			form#updateInfo(method="post", action="/mgUpdateVderInfo", enctype="multipart/form-data")
				.modal-header: h3 update Information
				.modal-body
					input(type="hidden", name="object[_id]", value=object._id)
					.form-group
						label.col-form-label(for="iptCode") Code
						input#iptCode.form-control(type="text", class="iptCode", name="object[code]" value=object.code)
					.form-group
						label.col-form-label(for="iptRole") Role
						select#iptRole.form-control(name="object[role]", data-style="btn-info")
							each key in Object.keys(Conf.vdRole)
								-a;
								if key == object.role
									-a;
									option(value=key, selected="selected") #{Conf.vdRole[key]} #{key}
								else
									option(value=key) #{Conf.vdRole[key]} #{key}
				.modal-footer
					button.btn.btn-default(type="button" data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交