.form-group.row
	label.col-sm-2.col-form-label Status
	.col-sm-8
		.form-check.form-check-inline
			each key in Object.keys(objStatus)
				-a;
				if condStatus.indexOf(key) > -1
					-a;
					input.form-check-input(id="sts"+key, type="checkbox", name="status", value=key, checked="checked")
					label.form-check-label(for="sts"+key) #{objStatus[key]} &nbsp; &nbsp;
				else
					input.form-check-input(id="sts"+key, type="checkbox", name="status", value=key)
					label.form-check-label(for="sts"+key) #{objStatus[key]} &nbsp; &nbsp;