.bg-light
	table.table.table-hover.table-bordered
		tr
			th Bcate code
			th English Name
			th Chinese Name
			th Father Cate
			th Weight(for sort)
		tr
			td #{object.code}
			td #{object.nameEN}
			td #{object.nameCN}
			td #{Conf.bcate[object.bcate]}
			td #{object.weight}
	table.table.table-hover.table-bordered
		tr
			th Brand Numbers
			th createAt
			th updateAt
			th creater
			th option
		tr
			td #{object.numbrand}
			td #{moment(object.createAt).format('DD/MM/YYYY')}
			td #{moment(object.updateAt).format('DD/MM/YYYY')}
			if object.creater && object.creater.name
				-a;
				td #{object.creater.name}
			else
				td loss
			td: a.btn.btn-warning.btn-lg(href="/bcategUpdate/"+object._id) update
