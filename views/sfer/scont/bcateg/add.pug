extends ../../aalayout/layout

block content
	.container
		h1 Bcate Add
		hr
		form#add(method="post", action="/addBcateg", enctype="multipart/form-data")
			.form-group.row
				label.col-md-2.col-form-label select First Categ
				.col-md-8
					select.form-control(name="object[bcate]", data-style="btn-info")
						each key in Object.keys(Conf.bcate)
							- let a;
							option(value=key) #{Conf.bcate[key]}
						- a;
			.form-group.row
				label.col-sm-2.col-form-label Code
				.col-sm-8
					input#iptCode.form-control(type="text", class="iptCode", name="object[code]", placeholder="Must fill it")
			.form-group.row
				label.col-sm-2.col-form-label English Name
				.col-sm-8
					input#iptNameEN.form-control(type="text",class="iptNameEN", name="object[nameEN]")
			.form-group.row
				label.col-sm-2.col-form-label 中文名字
				.col-sm-8
					input#iptNameCN.form-control(type="text",class="iptNameCN", name="object[nameCN]")
			.form-group.row
				.offset-md-2.col-md-10
					input.btn.btn-default(type="submit" value="Add Bcate")