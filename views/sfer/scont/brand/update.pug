extends ../../aalayout/layout

block content
	.container
		h1 Brand Update
		hr
		form#update(method="post", action="/updateBrand", enctype="multipart/form-data")
			input(type="hidden", name="object[_id]", value=object._id)
			.form-group.row
				label.col-sm-2.col-form-label Code
				.col-sm-8
					input#iptCode.form-control(type="text", class="iptCode", name="object[code]", value=object.code, placeholder="Must fill it")
			.form-group.row
				label.col-md-2.col-form-label Nation
				input(type="hidden", name="orgNation", value=object.nation)
				.col-md-8
					select.form-control(name="object[nation]", data-style="btn-info")
						each nation in nations
							if String(nation._id) == String(object.nation)
								option(value=nation._id, selected="selected") #{nation.code}
							else
								option(value=nation._id) #{nation.code}
						- a;
			.form-group.row
				//- label.col-md-2.col-form-label select First Categ
				//- .col-md-3
				//- 	select.form-control#cateFir(data-style="btn-info")
				//- 		option(value=-1) Please Select
				//- 		each key in Object.keys(Conf.bcate)
				//- 			option(value=key) #{Conf.bcate[key]}
				//- 		- a;
				label.col-md-2.col-form-label select Second Categ(后期做优化)
				input(type="hidden", name="orgBcateg", value=object.bcateg)
				.col-md-3
					select.form-control(name="object[bcateg]", data-style="btn-info")
						each bcateg in bcategs
							if String(bcateg._id) == String(object.bcateg)
								option(value=bcateg._id, selected="selected") #{bcateg.code}
							else
								option(value=bcateg._id) #{bcateg.code}
						- a;
			.form-group.row
				label.col-sm-2.col-form-label matDesp
				.col-sm-8
					input#iptmatDesp.form-control(type="text",class="iptmatDesp", name="object[matDesp]", value=object.matDesp)
			.form-group.row
				label.col-sm-2.col-form-label website
				.col-sm-8
					input#iptwebsite.form-control(type="text",class="iptwebsite", name="object[website]", value=object.website)
			.form-group.row
				label.col-sm-2.col-form-label webNote
				.col-sm-8
					input#iptwebNote.form-control(type="text",class="iptwebNote", name="object[webNote]", value=object.webNote)
			.form-group.row
				label.col-sm-2.col-form-label firmName
				.col-sm-8
					input#iptfirmName.form-control(type="text",class="iptfirmName", name="object[firmName]", value=object.firmName)
			.form-group.row
				label.col-md-2.col-form-label(for="iptIva") iva
				.col-md-8
					input.form-control#iptIva(type="text", name="object[iva]", value=object.iva)
			.form-group.row
				label.col-md-2.col-form-label pricelist
				.col-md-2
					select.form-control#selPL(name="object[plist]", data-style="btn-info")
						if object.plist == 1
							option(value=1, selected="selected") true
							option(value=0) false
						else
							option(value=1) true
							option(value=0, selected="selected") false
						-a;
				.col-md-6
					input.form-control#iptPLN(type="text", name="object[plNote]", placeholder="pricelist NOTE", value=object.plNote)
			.form-group.row
				label.col-md-2.col-form-label CATALOG
				.col-md-2
					select.form-control#selCL(name="object[atlas]", data-style="btn-info")
						if object.atlas == 1
							option(value=1, selected="selected") true
							option(value=0) false
						else
							option(value=1) true
							option(value=0, selected="selected") false
						-a;
				.col-md-6
					input.form-control#iptCLN(type="text", name="object[atNote]", placeholder="cataloglist NOTE", value=object.atNote)
			.form-group.row
				label.col-md-2.col-form-label(for="iptPDT") productTime
				.col-md-8
					input.form-control#iptPDT(type="text", name="object[pTime]", value=object.pTime)
			.form-group.row
				label.col-md-2.col-form-label(for="iptCartace") cartace
				.col-md-3
					input.form-control#iptCartace(type="number", name="object[cartace]", value=object.cartace)
				label.col-md-2.col-form-label(for="iptVideo") video
				.col-md-3
					input.form-control#iptVideo(type="number", name="object[video]", value=object.video)
			.form-group.row
				label.col-md-2.col-form-label Status
				.col-md-8
					select.form-control(name="object[status]", data-style="btn-info")
						each key in Object.keys(Conf.stsBrand)
							-a;
							if object.status == key
								-a;
								option(value=key, selected="selected") #{Conf.stsBrand[key]}
							else
								option(value=key) #{Conf.stsBrand[key]}
			.form-group.row
				.offset-md-2.col-md-10
					input.btn.btn-default(type="submit" value="Update Brand")