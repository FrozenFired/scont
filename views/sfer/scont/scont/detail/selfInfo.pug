-let divBg = "bg-light";

if object.status == 0
	-divBg ="bg-info";
else if object.status == 1
	-divBg ="bg-white";
else if object.status == 2
	-divBg ="bg-success";
else if object.status == 3
	-divBg ="bg-warning";
else if object.status == 4
	-divBg ="bg-secondary";
else if object.status == 5
	-divBg ="bg-danger";
div(class=divBg)
	.row
		.col-sm-6: h2 Brand: 
			if object.brand
				-a;
				a.btn.btn-primary(href="/brandDetail/"+object.brand._id) #{object.brand.code}
		.col-sm-6: h2 Vendor: 
			if object.vendor
				-a;
				a.btn.btn-primary(href="/vendorDetail/"+object.vendor._id) #{object.vendor.code}
.bg-light
	table.table.table-hover.table-bordered
		tr
			th Cause 
			th scont
			th note
			th creater <br/> updater
			th createAt <br/> updateAt
			th status
			th oprate
		tr
			td #{Conf.sctCause[object.cause]}
			td #{object.scont}
			td #{object.note}
			td
				if object.creater
					-a;
					span #{object.creater.code}
				br
				if object.updater
					-a;
					span #{object.updater.code}
			td #{moment(object.createAt).format('MM/DD/YYYY HH:mm')} <br/> #{moment(object.updateAt).format('MM/DD/YYYY HH:mm')}
			td(class=divBg) #{Conf.stsScont[object.status]}
			
			td
				a.btn.btn-dark.btn-lg(href="/scontUpdate/"+object._id) update
				button.btn.btn-warning.btn-lg#mark(type="button") Mark
script(src="/js/scont/markToggle.js")