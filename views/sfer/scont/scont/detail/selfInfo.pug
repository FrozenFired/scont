.row
	.col-sm-6: h2 Brand: 
		if object.brand
			-a;
			a(href="/brandDetail/"+object.brand._id) #{object.brand.code}
	.col-sm-6: h2 Vendor: 
		if object.vendor
			-a;
			a(href="/vendorDetail/"+object.vendor._id) #{object.vendor.code}
table.table.table-hover.table-bordered
	tr
		th Cause 
		th scont
		th note
		th creater <br/> updater
		th createAt <br/> updateAt
		th status
		th oprate
	tr
		td #{Conf.sctCause[object.cause]}
		td #{object.scont}
		td #{object.note}
		td
			if object.creater
				-a;
				span #{object.creater.code}
			br
			if object.updater
				-a;
				span #{object.updater.code}
		td #{moment(object.createAt).format('MM/DD/YYYY HH:mm')} <br/> #{moment(object.updateAt).format('MM/DD/YYYY HH:mm')}
		td #{Conf.stsScont[object.status]}
		
		td: a.btn.btn-warning.btn-lg(href="/scontUpdate/"+object._id) update
if object.logs && object.logs.length > 0
	-let logs = object.logs;
	hr
	h2 recorders:
	table.table.table-hover.table-bordered
		thead
			tr
				th <strong>Num</strong>
				th scont
				th note
				th editer
		tbody
			-let i =0;
			each log in logs
				-i++;
				tr
					td <strong>#{i}:</strong>
					td #{log.scont}
					td #{log.note}
					if log.editer
						-a;
						td #{log.editer.code}
					else
						td loss