table.table.table-hover.table-bordered
	thead
		tr
			th vendor code
			th Weight(for sort)
			th vtype
			th contacts
			th ac/sa
			th status
			th numvendor
			th createAt <br/>updateAt
			th option
	tbody
		each item in objects
			- let trBg;
			if item.status == 0
				-trBg ="bg-info";
			else if item.status == 1
				-trBg ="bg-default";
			else if item.status == 2
				-trBg ="bg-success";
			else if item.status == 3
				-trBg ="bg-warning";
			else if item.status == 4
				-trBg ="bg-secondary";
			else if item.status == 5
				-trBg ="bg-danger";
			tr(class=trBg+" item-id-"+item._id)
				td #{item.code}
				td #{item.weight}
				td #{Conf.vtype[item.vtype]}
				td
					if item.contacts && item.contacts.length > 0
						-contacts = item.contacts;
						each contact in contacts
							-a;
							ul
								li #{contact.contacter} 
								li #{contact.tel} 
								li #{contact.email}
				td #{item.ac} / #{item.sa}
				td #{Conf.stsVendor[item.status]}
				if item.sconts
					td #{item.sconts.length}
				else
					td 0
				-a;
				td
					span #{moment(item.createAt).format('MM/DD/YYYY')}
					br
					span #{moment(item.updateAt).format('MM/DD/YYYY')}
				td
					a.btn.btn-primary(href="/vendorDetail/"+item._id) view
					if item.sconts && item.sconts.length == 0
						-a;
						button.btn.btn-danger.del(type="button", data-urldel="/vendorDel", data-id=item._id) 删除
script(src="/js/delete.js")