extends ../aalayout/layout

block content
	.container
		.row
			h1.col-12.col-sm-6
				span Discount [#{count}]
			.col-6.col-sm-3.text-right
				span: a.btn.btn-info.btn-block(href="/bnScontAdd") Add Discount
			.col-6.col-sm-3.text-right
				button.btn.btn-warning.btn-block.btnFilter(type="button") Filter
		hr
		.filterInfo(style="display:none")
			.bg-light.pt-2
				include ./list/filter
			hr
		include ../../../aaPlugin/pageSlip
		include ./list/selfList
		.row
			.col-sm-8
			.col-sm-4
				include ./list/print
	script(src="/js/scont/scont/list.js")