extends ../aalayout/layout

block content
	.container
		.row
			h1.col-12.col-sm-6
				span Brands [#{count}]
			.col-6.col-sm-2.text-right
				span: a.btn.btn-info.btn-block(href="/bnBrandAdd") Add Brand
			.col-6.col-sm-2.text-right
				span: a.btn.btn-info.btn-block(href="/bnScontAdd") Add Discount
			.col-12.col-sm-2.text-right
				button.btn.btn-warning.btn-block.btnFilter(type="button") Filter
		hr
		.filterInfo(style="display:none")
			.row.bg-light.p-2
				.col-sm-12
					include ./list/filter
			hr
		.row
			.col-sm-12
				include ../../../aaPlugin/pageSlip
			.col-sm-12
				include ./list/selfList
		.row
			.col-sm-8
			.col-sm-4
				include ./list/print
	script(src="/js/filtTog.js")