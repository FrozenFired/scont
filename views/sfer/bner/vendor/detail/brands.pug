if object.sconts && object.sconts.length > 0
	-let sconts = object.sconts;
	hr
	h2 #{sconts.length} - Brands:
	table.table.table-hover.table-bordered
		thead
			tr
				th Brand
				th Category
				th DISCOUNT
				th Note
				th status
				th view
		tbody
			each scont in sconts
				- let scontBg;
				if scont.status == 0
					-scontBg ="bg-info";
				else if scont.status == 1
					-scontBg ="bg-default";
				else if scont.status == 2
					-scontBg ="bg-success";
				else if scont.status == 3
					-scontBg ="bg-warning";
				else if scont.status == 4
					-scontBg ="bg-secondary";
				else if scont.status == 5
					-scontBg ="bg-danger";
				tr(class="scont-id-"+scont._id)
					if scont.brand
						-brand=scont.brand;
						if brand.status == 2
							-brandBg ="bg-secondary";
						else
							-brandBg ="bg-default";

						td(class=brandBg): a.btn.btn-primary(href="/bnBrand/"+brand._id) #{brand.code}
						if brand.bcateg
							-bcateg=brand.bcateg;
						td(class=brandBg) #{Conf.bcate[bcateg.bcate]}
					else
						td
						td
					td(class=scontBg) #{scont.scont}%
					td(class=scontBg) #{scont.note}
					td(class=scontBg) #{Conf.stsScont[scont.status]}
					td(class=scontBg): a.btn.btn-primary(href="/bnScont/"+scont._id) view