form(method="get", action=url, enctype="multipart/form-data")
	.form-group.row
		label.col-sm-2.col-form-label Keywords
		.col-md-2
			select.form-control(name="keytype", data-style="btn-info")
				if keytype == "code"
					-a;
					option(value="code", selected="selected") Code
				else
					option(value="code") Code
		.col-md-8
			input.form-control(type="text", name='keyword', value=keyword, placeholder="input the keywords to find your jobs")
	//- include ../../../aaPlugin/filter/at

	- let objRole = Conf.vdRole;
	.form-group.row
		label.col-sm-2.col-form-label Role
		.col-sm-10
			select#iptRole.form-control(name="role", data-style="btn-info")
				each key in Object.keys(objRole)
					-a;
					if condRole == key
						-a;
						option(value=key, selected="selected") #{Conf.vdRole[key]} #{key}
					else
						option(value=key) #{Conf.vdRole[key]} #{key}
				if condRole == -1
					-a;
					option(value=-1, selected="selected") Select All
				else
					option(value=-1) Select All
	include ./../../../../aaPlugin/filter/footer