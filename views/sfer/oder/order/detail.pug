extends ../aalayout/layout

block content
	.container
		-let stsOrderBg = Conf.stsOrderBg[object.status];
		.row(class=stsOrderBg)
			h1.col-sm-6
				span Order Information: 
			.col-sm-4.text-right
				a.btn.btn-link(href="/odOrders") back order list
		hr
		include ./detail/selfInfo
		hr
		if object.status == 0
			-a;
			dl
				if object.payAc
					-a;
					dt ac:
					dd #{object.payAc.price}
				if object.payMd
					-a;
					dt md:
					dd #{object.payMd.price}
				if object.paySa
					-a;
					dt sa:
					dd #{object.paySa.price}
			button.btn.btn-warning(type="button") 等待财务部检查确认
			hr
			.row
				.col-sm-6
					a.btn.btn-danger(href="/odOrderDel/"+object._id) delete
				.col-sm-6
		else
			include ./detail/acsaInfo