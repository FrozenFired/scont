.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
	a.navbar-brand(href="/rper"): img(src="/imgs/casaLogo.jpg", width="40")
	button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation")
		<span class="navbar-toggler-icon"></span>

	.collapse.navbar-collapse#navbarTogglerDemo02
		ul.navbar-nav.mr-auto.mt-2.mt-lg-0
			li.nav-item.active
				a.nav-link(href="/rpBrands") Brand <span class="sr-only">(current)</span>
			li.nav-item.active
				a.nav-link(href="/sfTasks") taskList <span class="sr-only">(current)</span>
		ul.navbar-nav
			li
				form.form-inline(method="get", action="/headerRpBrand", enctype="multipart/form-data")
					input(type="hidden", name="keytpye", value="code")
					input.form-control.mr-sm-2(type="search", name='keyword', placeholder="Brand Code",  aria-label="Search")
					button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search

			li.text-info
				span &nbsp;
				a.btn.btn-info(href="/sferInfo") hello: 
					if crSfer.name && crSfer.name.length > 0
						span #{crSfer.name}
					else
						span #{crSfer.code}
					if crSfer.role
						span &nbsp;(#{Conf.sfRole[crSfer.role]})
					if crSfer.photo
						img(src=Svaddr+crSfer.photo, width="30")
					-a;
			span &nbsp;&nbsp;&nbsp;&nbsp;
			li: a.btn.btn-danger(href="/logout") Logout

div.noprint(style="height:56px")