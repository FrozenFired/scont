extends ../aalayout/layout

block content
	.container.mt-3
		.row
			h1.col-sm-6 New Ord
			.col-sm-6.text-right
				a.btn.btn-link(href="/sfOrds") back List
		hr
		form#addOrd(method="post", action=action, enctype="multipart/form-data")
			input#iptStaff.form-control(type="hidden", name="object[staff]", value=crSfer.code)
			.form-group.row
				label.col-sm-2.com-form-label Input Vendor Code
				.col-sm-8
					input#ajaxIptVendorCode.form-control(type="text", data-router="/ajaxSfVendor")
				.col-sm-2
					span.text-danger#ajaxOptVendorCode
			input#iptVder(type="hidden", name="object[vder]")
			.row
				.col-sm-2
				.col-sm-8
					table#filterVendor.table.table-hover.table-borded
			.form-group.row
				label.col-sm-2.col-form-label OrdCode
				.col-sm-8
					input#iptOrd.form-control(type="text", name="object[ordCode]")
				.col-sm-2
					span#optOrd.text-danger(style="display:none") Please complete order

			.form-group.row
				label.col-sm-2.col-form-label P/I
				.col-sm-8
					input#iptPi.form-control(type="text", name="object[piCode]")
				.col-sm-2
					span#optPi.text-danger(style="display:none") Please complete proforma invoice

			.form-group.row
				label.col-sm-2.col-form-label Brand
				.col-sm-8
					input#iptBrand.form-control(type="text", name="object[brand]")
				.col-sm-2
					span#optBrand.text-danger(style="display:none") Please complete Brand

			.form-group.row
				label.col-sm-2.col-form-label Price
				.col-sm-8
					input#iptPrice.form-control(type="text", name="object[price]")
				.col-sm-2
					span#optPrice.text-danger(style="display:none") Please complete Price

			.form-group.row
				label.col-sm-2.col-form-label taxType
				.col-sm-8
					select#iptTaxType.form-control(name="object[taxType]", data-style="btn-info")
						each key in Object.keys(Conf.taxType)
							-a;
							option(value=key) #{Conf.taxType[key]} - #{key}
				.col-sm-2
					span#optTaxType.text-danger


			.form-group.row
				label.col-sm-2.col-form-label qtNote
				.col-sm-8
					textarea.form-control.rounded-0(rows="3", name="object[qtNote]")
			hr
			.form-group.row
				.offset-md-2.col-md-10
					input.btn.btn-default(type="submit" value="Add Ord")

	script(src="/js/ord/add.js")