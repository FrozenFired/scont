extends ../aalayout/layout

block content
	.container
		.row
			h1.col-sm-6
				span Task Information:
			.col-sm-4.text-right
				a.btn.btn-link(href="/taskList") task list
		hr
		form(method="post", action="updateTask", enctype="multipart/form-data")
			.form-group.row
				label.col-sm-2.col-form-label TaskCode
				.col-sm-3
					input.form-control(type="text", value=object.code, readonly="readonly")

				label.col-sm-2.col-form-label User
				.col-sm-3
					if object.staff
						-let a;
						input.form-control(type="text", value=object.staff.code, readonly="readonly")
					else
						input.form-control(type="text", value="user lost", readonly="readonly")
			hr
			.form-group.row
				label.col-sm-2.col-form-label Title
				.col-sm-8
					input.form-control(type="text", value=object.title, readonly="readonly")
			.form-group.row
				label.col-sm-2.col-form-label Serial
				.col-sm-8
					input.form-control(type="text", value=object.order, readonly="readonly")

			.form-group.row
				input#valDesc(type="hidden",  value=object.description, readonly="readonly")
				label.col-sm-2.col-form-label description
				.col-sm-8
					textarea#iptDesc.form-control.rounded-0(rows="3", readonly="readonly")
			.form-group.row
				input#valNote(type="hidden",  value=object.note, readonly="readonly")
				label.col-sm-2.col-form-label note
				.col-sm-8
					textarea#iptNote.form-control.rounded-0(rows="3", readonly="readonly")
		.row
			.col-sm-6
				a.btn.btn-danger(href="/taskDel/"+object._id) delete
			.col-sm-4.text-right
				a.btn.btn-warning(href="/taskUpdate/"+object._id) Update
	script(src="/js/task/detail.js")
