						a.nav-link(href="/bcategList") bcategList <span class="sr-only">(current)</span>
					li.nav-item.active
						a.nav-link(href="/taskList") taskList <span class="sr-only">(current)</span>
					li.nav-item.active
						a.nav-link(href="/taskAdd") NewTask <span class="sr-only">(current)</span>
			ul.navbar-nav
				if crSfer
					li.text-info: a.btn.btn-info(href="/sferDetail/"+crSfer._id) hello: 
						if crSfer.name && crSfer.name.length > 0
							span #{crSfer.name}
						else
							span #{crSfer.code}
						if crSfer.role
							span &nbsp;(#{Conf.sfRole[crSfer.role]})
						if crSfer.photo
							img(src=ServerAddress+crSfer.photo, width="30")
					span &nbsp;&nbsp;&nbsp;&nbsp;
					li: a.btn.btn-danger(href="/sferLogout") Logout
				else
					li: a(href="#", data-toggle="modal", data-target="#signIn") manager


.container
	.row
		div(style="height:80px") 


#signIn.modal.fade
	.modal-dialog
		.modal-content
			form(method="post", action="/loginMger")
				.modal-header: h3 Manager Signin
				.modal-body
					.form-group
						label.col-form-label(for="iptCode") Code
						input#iptCodeModal.form-control(type="text", class="iptCode", name="code")
					.form-group
						label.col-form-label(for="iptPassword") Password
						input#iptPasswordModal.form-control(type="password", class="iptPassword", name="password")
				.modal-footer
					button.btn.btn-default(type="button" data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交