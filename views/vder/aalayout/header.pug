.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
	a.navbar-brand(href="/vder"): img(src="/imgs/casaLogo.jpg", width="40")
	button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation")
		<span class="navbar-toggler-icon"></span>

	.collapse.navbar-collapse#navbarTogglerDemo02
		ul.navbar-nav.mr-auto.mt-2.mt-lg-0
			if crVder
				-a;
				li.nav-item.active
					a.nav-link(href="/vdBrandList") brands <span class="sr-only">(current)</span>
		ul.navbar-nav
			if crVder
				-a;
				li.text-info
					span &nbsp;
					a.btn.btn-info(href="/vderDetail/"+crVder._id) hello: 
						if crVder.name && crVder.name.length > 0
							-a;
							span #{crVder.name}
						else
							span #{crVder.code}
						if crVder.role
							-a;
							span &nbsp;(#{Conf.sfRole[crVder.role]})
						if crVder.photo
							-a;
							img(src=Svaddr+crVder.photo, width="30")
				span &nbsp;&nbsp;&nbsp;&nbsp;
				li: a.btn.btn-danger(href="/logout") Logout

.container
	.row
		div(style="height:80px")